/* components/nav/nav.wxss */
.nav {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  background: #ffffff;
}
.nav view {
  flex: 1;
  text-align: center;
}
.nav-active {
  color: #2a82e4;
}
.image {
  display: inline-block;
  width:38rpx;
  height:39rpx;
  text-align: center;
}
.image image {
  width: 100%;
  height: 100%;
}