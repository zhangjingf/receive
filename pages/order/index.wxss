/* pages/order/index.wxss */
.item {
    margin: 20rpx 20rpx 0 20rpx;
    background: #ffffff;
}
image {
    width:25rpx;
    height:34rpx;
}
.header {
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    line-height: 70rpx;
    border-bottom: 1rpx solid rgba(220, 220, 220, 1);
}
.header>view:nth-child(1) {
    width:44rpx;
    height:44rpx;
    background:rgba(0, 140, 240, 1);
    border-radius:5rpx;
    font-size:28rpx;
    line-height: 44rpx;
    text-align: center;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(255, 255, 255, 1);
}
.header>view:nth-child(2) {
    flex: 1;
    font-size:26rpx;
    text-align: center;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51, 51, 51, 1);
}
.header>view:nth-child(3) {
    font-size:28rpx;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color:rgba(230, 0, 18, 1);
}
.orange {
    background:rgba(255, 139, 3, 1) !important;
}
.info {
    padding: 0 20rpx;
    font-size:26rpx;
    line-height: 58rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51, 51, 51, 1);
    border-bottom: 1rpx solid rgba(220, 220, 220, 1);
}
.info>view:nth-child(1) {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.express {
    padding: 0 20rpx;
    font-size:26rpx;
    line-height: 48rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51, 51, 51, 1);
    border-bottom: 1rpx solid rgba(220, 220, 220, 1);
}
.express view>view:nth-child(1) {
    display: inline-block;
    width: 129rpx !important;
}
.order {
    padding: 5rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size:22rpx;
    line-height: 44rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(102, 102, 102, 1);
}
.order>view:nth-child(2) {
    width:140rpx;
    height:64rpx;
    background:rgba(0, 140, 240, 1);
    border:1rpx solid rgba(0, 140, 240, 1);
    border-radius:5rpx;
    font-size:26rpx;
    line-height: 64rpx;
    text-align: center;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(255, 255, 255, 1);
}